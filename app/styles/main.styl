@import 'includes/mixins'
@import 'rooms/occupied'
@import 'rooms/upcoming'
@import 'rooms/vacant'

body
  background #000
  position absolute
  height 100%
  width 100%
  margin 0
  font-family 'Raleway'
  font-weight 100
  color #fff

h1
  font-weight 500
  text-transform uppercase
  font-size 68px
  text-align center

img
  width 50px
  height 50px

.time-remaining
  font-size 51px
  text-align center

.polar-clock-container
  position absolute
  width 100%
  height 50%
  bottom 0
  padding 0 50px 70px 50px
  box-sizing border-box

.polar-clock
  width 100%
  height 100%

#OcupadoApp
  display flex
  height 100%
  align-items stretch

  section
    width 0
    flex 1
    position relative

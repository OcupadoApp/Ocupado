.events-list
  position absolute
  height 80%
  width 40%
  right -40%
  background #efefef
  top 10%
  border-radius 5px 0 0 5px
  box-sizing border-box
  padding 10px
  color #000
  z-index 20

  .events-list-content
    background #fff
    height 100%
    width 100%
    border 1px solid #ddd

  .events-list-handle
    width 30px
    height 100%
    position absolute
    left -30px
    top 0
    margin-top -25px

    &:before
      content ''
      background #efefef
      border-radius 5px 0 0 5px
      display block
      height 50px
      width 30px
      position absolute
      left 0
      top 50%
      margin-top -25px

.upcoming-events
  margin 0
  padding 0
  width 100%
  height 100%
  overflow auto
  overflow-y scroll
  -webkit-overflow-scrolling touch

  li
    display block
    margin 0
    background #f3f3f3
    padding 10px 10px 10px 70px
    border-bottom 1px solid #ddd
    position relative

    img
      border-radius 0
      width 58px
      height 58px
      left 0
      top 0
      margin 0

    .event-name
      font-weight 400
      display block
      overflow hidden
      text-overflow ellipsis
      white-space nowrap

    .event-time
      display block

    .event-attendees
      max-height 0
      overflow hidden

    &:last-child
      border-bottom none

    &.open
      .event-attendees
        max-height none


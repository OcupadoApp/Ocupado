.events-list
  position absolute
  height 80%
  width 40%
  right -40%
  top 10%
  border 3px solid #0d7f7f
  border-radius 5px 0 0 5px
  box-sizing border-box
  padding 4px
  color #000
  z-index 20

  .events-list-content
    height 100%
    width 100%

  .events-list-handle
    width 30px
    height 100%
    position absolute
    left -30px
    top 0
    margin-top -25px

    &:before
      content 'Óù•'
      font-family entypo
      color #0d7f7f
      display block
      height 50px
      width 30px
      position absolute
      left 0
      top 50%
      margin-top -25px
      transform scale(2,1)
      -webkit-transform scale(1,2)
      line-height 50px
      font-size 40px

.upcoming-events
  margin 0
  padding 0
  width 100%
  height 100%
  overflow auto
  overflow-y scroll
  -webkit-overflow-scrolling touch

  li
    display block
    margin 0
    background #f3f3f3
    padding 10px 10px 10px 70px
    border-bottom 1px solid #ddd
    position relative

    img
      border-radius 0
      width 58px
      height 58px
      left 0
      top 0
      margin 0

    .event-name
      font-weight 400
      display block
      overflow hidden
      text-overflow ellipsis
      white-space nowrap

    .event-time
      display block

    .event-attendees
      max-height 0
      overflow hidden

    &:last-child
      border-bottom none

    &.open
      .event-attendees
        max-height none


.block-header
  background white
  color #818c98
  height 200px

  .block-header__content
    width 500px
    display block
    margin 0 auto
    padding 110px 0 0 0
    font-size 24px
    font-weight 400

.calendar-list
  width 500px
  margin 0 auto
  list-style-type none
  padding 0

  li
    margin 0
    padding 0
    height 100px
    line-height 100px
    border-bottom 1px solid #d7dadd
    text-transform uppercase
    font-size 24px
    font-weight 300

  .calendar-list__bullet
    float left
    width 25px
    height 25px
    border-radius 50%
    border 3px solid
    margin-top 36px
    margin-right 10px

.sign-out
  position fixed
  bottom 0
  right 0
  background transparent
  border none
  padding 10px
  color #818c98
  font-family Raleway
  font-weight 300

.back
  margin-top 50px
  border 1px solid #fff
  border-radius 3px
  background transparent
  position absolute
  color #fff

.book-now-btn
  position absolute
  width 50px;
  height 50px
  left 50%
  margin-left -25px
  top 50%
  margin-top -25px
  border 1px solid #57616c
  border-radius 50%
  background #0d7f7f

  &:before
    content ''
    display block
    width 100%
    height 100%
    background-image url('../images/icon-plus.svg')
    background-size 15px
    background-position center center
    background-repeat no-repeat

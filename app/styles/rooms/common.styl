body
  background #ececec
  position absolute
  height 100%
  width 100%
  margin 0
  font-family 'Raleway'
  font-weight 100
  color #57616c

a
  color #57616c

h1
  font-weight 500
  text-transform uppercase
  font-size 68px
  text-align center
  margin-top 24px

img
  width 110px
  height 110px
  border-radius 50%
  position absolute
  z-index 10
  left 50%
  margin-left -55px
  margin-top -45px

.time-remaining
  font-size 51px
  text-align center
  margin-top -3px

.polar-clock-container
  position absolute
  width 100%
  height 50%
  bottom 0
  padding 0 50px 40px 50px
  box-sizing border-box

.room-status-text
  position absolute
  left 0
  margin-bottom 0
  font-size 43px
  text-align center
  width 100%

.polar-clock
  width 100%
  height 100%

#OcupadoApp
  *
    box-sizing border-box

  .rooms-container
    position absolute
    width 100%
    height 100%
    overflow hidden
    color #0a3d33

  .room-container
    display -webkit-box
    display -webkit-flex
    display flex
    height 100%
    -webkit-box-pack justify
    align-items stretch
    overflow hidden
    position absolute
    width 100%
    height 100%

  section
    width 0
    box-flex 1
    -webkit-box-flex 1
    -webkit-flex 1
    flex 1
    position relative
    border-left 1px solid #000

    &:first-child
      border-left none
